<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Student Dashboard</h1>
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> Welcome to your student dashboard, <strong>{{user.name}}</strong>!
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white stat-card">
            <div class="card-body">
                <h5 class="card-title">Total Attendance</h5>
                <p class="stat-value">{{attendance.total}}</p>
                <p class="card-text">Lab sessions attended</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white stat-card">
            <div class="card-body">
                <h5 class="card-title">Attendance Rate</h5>
                <p class="stat-value">{{attendance.rate}}%</p>
                <p class="card-text">Of all registered sessions</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white stat-card">
            <div class="card-body">
                <h5 class="card-title">Upcoming Sessions</h5>
                <p class="stat-value">{{upcomingSessions.length}}</p>
                <p class="card-text">Sessions this week</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Attendance</h5>
                <a href="/student/attendance" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                {{#if recentAttendance.length}}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Lab</th>
                                    <th>Session</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentAttendance}}
                                <tr>
                                    <td>{{formatDate this.date}}</td>
                                    <td>{{this.lab_name}}</td>
                                    <td>{{this.session_name}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i> You haven't attended any lab sessions yet.
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Upcoming Lab Sessions</h5>
                <a href="/student/labs" class="btn btn-sm btn-primary">View All Labs</a>
            </div>
            <div class="card-body">
                {{#if upcomingSessions.length}}
                    <div class="list-group">
                        {{#each upcomingSessions}}
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">{{this.lab_name}}</h5>
                                <small>{{this.day_of_week}}</small>
                            </div>
                            <p class="mb-1">{{this.session_name}}</p>
                            <small>{{this.start_time}} - {{this.end_time}}</small>
                        </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i> No upcoming lab sessions scheduled.
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Your Attendance Overview</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="attendanceChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>