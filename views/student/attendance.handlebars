<div class="container py-4">
    <div class="row">
        <div class="col-12 mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/student/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Attendance</li>
                </ol>
            </nav>
            <h2 class="mb-4"><i class="fas fa-calendar-check me-2"></i>My Attendance</h2>
        </div>
    </div>

    <div class="row">
        <!-- Mark Attendance Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Mark Attendance</h5>
                </div>
                <div class="card-body">
                    <form action="/student/attendance/mark" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="lab_id" class="form-label">Select Lab</label>
                            <select class="form-select" id="lab_id" name="lab_id" required>
                                <option value="" selected disabled>Choose a lab</option>
                                {{#each labs}}
                                    <option value="{{this.id}}">{{this.name}} ({{this.location}})</option>
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">
                                Please select a lab.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="lab_session_id" class="form-label">Select Session</label>
                            <select class="form-select" id="lab_session_id" name="lab_session_id" required>
                                <option value="" selected disabled>Choose a session</option>
                                {{#each labSessions}}
                                    <option value="{{this.id}}" data-lab="{{this.lab_id}}">
                                        {{this.name}} ({{this.day_of_week}}, {{this.start_time}} - {{this.end_time}})
                                    </option>
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">
                                Please select a session.
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-2"></i>Mark Attendance
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Information Card -->
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Information</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <h6><i class="fas fa-lightbulb me-2"></i>Attendance Rules</h6>
                        <ul class="mb-0 small">
                            <li>You can only mark attendance for today's sessions.</li>
                            <li>Attendance can only be marked during session hours.</li>
                            <li>You cannot mark attendance for the same session twice.</li>
                            <li>If you made a mistake, you can delete and re-mark your attendance.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Attendance Records -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-history me-2"></i>Attendance History</h5>
                        <span class="badge bg-primary rounded-pill">{{attendance.length}} Records</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    {{#if attendance.length}}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Lab</th>
                                        <th>Session</th>
                                        <th>Time</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each attendance}}
                                        <tr>
                                            <td>{{formatDate this.date}}</td>
                                            <td>{{this.lab_name}}</td>
                                            <td>{{this.session_name}}</td>
                                            <td>{{this.start_time}} - {{this.end_time}}</td>
                                            <td>
                                                <form action="/student/attendance/delete/{{this.id}}" method="POST"
                                                    onsubmit="return confirm('Are you sure you want to delete this attendance record?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    {{else}}
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times text-muted fa-3x mb-3"></i>
                            <h5>No attendance records found</h5>
                            <p class="text-muted">You haven't marked any attendance yet.</p>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
